<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@android:integer/config_mediumAnimTime"
    android:exitFadeDuration="@android:integer/config_mediumAnimTime">

    <item android:state_window_focused="false" android:drawable="@android:color/transparent" />

    <item android:state_focused="true"  android:state_enabled="false" android:state_pressed="true" android:drawable="@color/selectable_item_background" />
    <item android:state_focused="true"  android:state_enabled="false"                              android:drawable="@color/selectable_item_background" />
    <item android:state_focused="true"                                android:state_pressed="true" android:drawable="@color/selectable_item_background" />
    <item android:state_focused="false"                               android:state_pressed="true" android:drawable="@color/selectable_item_background" />
    <item android:state_focused="true"                                                             android:drawable="@color/selectable_item_background" />

</selector>