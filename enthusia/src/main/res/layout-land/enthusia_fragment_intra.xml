<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <org.enthusia.app.ui.SquareImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:contentDescription="@null"
            android:background="@drawable/img_enthusia_intrapic"
            android:layout_margin="8dp" />

        <org.enthusia.app.ui.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/enthusia_fragment_intra_button_points_table"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:rippleOverlay="false"
            app:rippleBackground="@color/app_color"
            app:rippleColor="@color/app_color_dark"
            app:rippleDelayClick="true"
            app:rippleDimension="24dp"
            app:rippleAlpha="0.65"
            app:rippleHover="true">

            <Button
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enthusia_points_table"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </org.enthusia.app.ui.MaterialRippleLayout>

        <org.enthusia.app.ui.MaterialRippleLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/enthusia_fragment_intra_button_department_heads"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:rippleOverlay="false"
            app:rippleBackground="@color/app_color"
            app:rippleColor="@color/app_color_dark"
            app:rippleDelayClick="true"
            app:rippleDimension="24dp"
            app:rippleAlpha="0.65"
            app:rippleHover="true">

            <Button
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/enthusia_department_heads"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </org.enthusia.app.ui.MaterialRippleLayout>

    </LinearLayout>

</ScrollView>