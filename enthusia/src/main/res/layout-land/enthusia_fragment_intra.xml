<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="320dp"
            android:layout_weight=".75"
            android:scaleType="fitXY"
            android:layout_margin="10dp"
            android:background="@drawable/img_enthusia_intrapic" />

        <org.enthusia.app.ui.HighlightButton
            android:id="@+id/enthusia_fragment_intra_button_points_table"
            android:background="@drawable/selector_button_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/enthusia_points_table"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <org.enthusia.app.ui.HighlightButton
            android:id="@+id/enthusia_fragment_intra_button_department_heads"
            android:background="@drawable/selector_button_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/enthusia_department_heads"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>
</ScrollView>