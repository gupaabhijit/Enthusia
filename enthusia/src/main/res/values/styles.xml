<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_enthusia</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Enthusia</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Enthusia</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Enthusia</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Enthusia</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Enthusia</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_enthusia</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_enthusia</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Enthusia</item>
        <item name="android:selectableItemBackground">@drawable/selectable_item_background</item>
        <item name="android:editTextBackground">@drawable/enthusia_edit_text_holo_light</item>
        <item name="android:textColorHighlight">#994fc3f7</item>
        <item name="android:textSelectHandleLeft">@drawable/enthusia_text_select_handle_left</item>
        <item name="android:textSelectHandleRight">@drawable/enthusia_text_select_handle_right</item>
        <item name="android:textSelectHandle">@drawable/enthusia_text_select_handle_middle</item>
    </style>

    <style name="AppTheme.Dialog" parent="android:Holo.Light.ButtonBar.AlertDialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit</item>
    </style>

    <style name="CardTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="ActionBar.Solid.Enthusia" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_enthusia</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:height">@dimen/actionbar_height</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_enthusia</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_enthusia</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Enthusia</item>
    </style>

    <style name="ActionBar.Transparent.Enthusia" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_enthusia</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Enthusia</item>
    </style>

    <style name="PopupMenu.Enthusia" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_enthusia</item>
    </style>

    <style name="DropDownListView.Enthusia" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_enthusia</item>
    </style>

    <style name="ActionBarTabStyle.Enthusia" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_enthusia</item>
    </style>

    <style name="DropDownNav.Enthusia" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_enthusia</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_enthusia</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_enthusia</item>
    </style>

    <style name="ProgressBar.Enthusia" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_enthusia</item>
    </style>

    <style name="ActionButton.CloseMode.Enthusia" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <!--item name="android:background">@drawable/btn_cab_done_enthusia</item-->
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Enthusia.Widget" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:popupMenuStyle">@style/PopupMenu.Enthusia</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Enthusia</item>
    </style>

</resources>
