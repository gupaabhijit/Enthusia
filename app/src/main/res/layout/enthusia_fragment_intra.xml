<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight=".75"
        android:scaleType="fitXY"
        android:background="@drawable/enthusia_intrapic"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp" />

    <com.vjti.fests.ui.HighlightButton
        android:id="@+id/enthusia_fragment_intra_button_points_table"
        android:background="@drawable/enthusia_button_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enthusia_points_table"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp" />

    <com.vjti.fests.ui.HighlightButton
        android:id="@+id/enthusia_fragment_intra_button_department_heads"
        android:background="@drawable/enthusia_button_default"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enthusia_department_heads"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp" />
</LinearLayout>