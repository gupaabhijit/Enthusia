<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_background" >

    <TextView
        android:id="@+id/register_tv_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="italic"
        android:text="@string/register_info" />

    <com.neopixl.pixlui.components.edittext.EditText
        android:id="@+id/register_et_username"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/register_tv_register"
        android:layout_marginTop="80sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginBottom="10sp"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:hint="@string/username" />

    <com.neopixl.pixlui.components.edittext.EditText
        android:id="@+id/register_et_email"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_below="@+id/register_et_username"
        android:layout_marginTop="10sp"
        android:layout_marginLeft="25sp"
        android:layout_marginRight="25sp"
        android:layout_marginBottom="10sp"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:gravity="center"
        android:hint="@string/email" />


    <Button
        android:id="@+id/register_btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:text="@string/register" />


</RelativeLayout>